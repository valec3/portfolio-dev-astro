---
import TitleSection from "./TitleSection.astro"

const dataEducation = [ 
    {
        id: 1,
        title: "Ingenieria Estadistica e Informatica",
        institution: "Universidad Nacional del Altiplano - Puno",
        date: "2021 - 2026",
        description: "Estudios de pregrado en la carrera de Ingenieria Estadistica e Informatica, enfocada en la ciencia de datos con Python, R, SQL, entre otros."
    },
    {
        id: 2,
        title: "Bootcamp de Ciencia de datos Avanzado",
        institution: "Codigo facilito",
        date: "2024",
        description: "Bootcamp de ciencia de datos avanzado, donde se aprendio a trabajar con datos, analisis de datos, visualizacion de datos, machine learning, entre otros."
    },
    {
        id: 3,
        title: "Oracle Next Education Backend Developer",
        institution: "Alura",
        date: "2023",
        description: "Curso de desarrollo de aplicaciones backend con Java, Spring Boot, JPA, REST, API, entre otros."
    },
    {
        id: 4,
        title: "Analisis de datos con Python",
        institution: "Coursera - IBM",
        date: "2023",
        description: "Curso de analisis de datos con Python, con enfasis en analisis de datos, visualizacion de datos y machine learning."
    },
]

---
<section class="mt-6">
    <TitleSection title="Educacion" />
    <div>
        <ul class="list-none flex flex-col gap-6">
            {
                dataEducation.map((education) => (
                    <li class="mb-4">
                        <h3 class="text-xl font-bold text-blue-400 mb-2">{education.title}</h3>
                        <p class="text-[1rem] font-semibold text-slate-400">{education.institution}</p>
                        <p class="text-[1rem] font-light italic">{education.date}</p>
                        <p class="text-[1rem] font-light text-wrap">{education.description}</p>
                    </li>
                ))
            }
        </ul>
    </div>
</section>