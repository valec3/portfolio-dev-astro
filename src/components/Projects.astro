---
import TitleSection from "./TitleSection.astro";
import { projectsData } from "../data/data";
import { Image } from "astro:assets";
---

<section>
    <TitleSection title="Proyectos" />
    <div class="flex flex-col gap-8">
        {
            projectsData.map((project) => (
                <div key={project.id} class="flex flex-col gap-2">
                    <Image src={project.img} alt={project.title} width={600} height={450} class="w-full"/>
                    <div>
                        <h3 class="text-xl md:text-2xl font-bold text-blue-500">{project.title}</h3>
                        <p>{project.description}</p>
                        <ul class="my-2">
                            {
                                project.languages.map((language) => (
                                    <li key={language} class="inline-block bg-blue-500 text-white rounded-full px-3 py-1 text-sm font-semibold mr-2 mt-2">{language}</li>
                                ))
                            }    
                        </ul>
                        <a 
                            href={project.link} 
                            target="_blank" 
                            rel="noopener noreferrer" 
                            class="cursor-pointer text-yellow-400"
                        >
                            Ver proyecto <span class="text-yellow-400">&rarr;</span>
                        </a>
                    </div>
                </div>
            ))
        }
    </div>
</section>